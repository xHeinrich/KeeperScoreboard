<UserControl x:Class="keeperScoreboard.XAML.Controls.ToasterNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:keeperScoreboard.XAML.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid x:Name="bgColor" Background="#0080B3" Margin="10,0,0,0">
        <Grid Background="#FF292929" Margin="4,4,4,4">
            <Label x:Name="lblTitle" Content="Battlefield Scoreboard" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="#0080B3" Margin="148,60,-2,-4"/>
            <Label x:Name="lblText" Content="log message" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFC5C5C5"/>
            <TextBlock x:Name="lblSubMessage" HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" Text="{Binding MyText}" Foreground="#FFC5C5C5" VerticalAlignment="Top"/>

        </Grid>

    </Grid>
</UserControl>
