<Window x:Class="keeperScoreboard.XAML.ResizeReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:keeperScoreboard.XAML"
        mc:Ignorable="d"
        Title="Resize Report" Height="186" Width="147" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblPlayerCount" Content="Player Count: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbTimes" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="107" SelectionChanged="cbTimes_SelectionChanged"/>
        <Button x:Name="btnVwReport" Content="View Report" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Click="button_Click" Width="107" Height="32"/>
        <Button x:Name="btnSave" Content="Resize" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Click="btnSave_Click" Width="107" Height="32"/>

    </Grid>
</Window>
